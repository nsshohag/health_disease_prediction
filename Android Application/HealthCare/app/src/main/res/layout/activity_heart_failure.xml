<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Heart_Failure">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_marginTop="10dp"
            android:text="Provide Your Information To Check Whether You Are in The Risk of Heart Failure"
            android:textAlignment="center"
            android:textColor="#2a2a52"
            android:textSize="16dp"
            android:textStyle="bold"></TextView>

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#e8e3e3"
            android:orientation="vertical">

            <com.google.android.material.slider.Slider
                android:id="@+id/slider_age"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:contentDescription="Age"
                android:stepSize="1.0"
                android:value="20"
                android:valueFrom="0"
                android:valueTo="100"></com.google.android.material.slider.Slider>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:text="Age in Years"
                android:textAlignment="center"
                android:textColor="#8692f7"
                android:textSize="16dp"
                android:textStyle="bold"></TextView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="#e8e3e3"
            android:orientation="vertical">

            <RadioGroup

                android:id="@+id/gender"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/male"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:checked="true"
                    android:text="Male"
                    android:textColor="#8692f7" />

                <RadioButton
                    android:id="@+id/female"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Female"
                    android:textColor="#8692f7" />

            </RadioGroup>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:text="Gender"
                android:textAlignment="center"
                android:textColor="#8692f7"
                android:textSize="16dp"
                android:textStyle="bold"></TextView>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="#e8e3e3"
            android:orientation="vertical">

            <com.google.android.material.slider.Slider
                android:id="@+id/slider_chest_pain_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:contentDescription="chest_pain_type"
                android:stepSize="1.0"
                android:value="2"
                android:valueFrom="0"
                android:valueTo="3"></com.google.android.material.slider.Slider>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Asymptomatic"
                    android:textAlignment="center"></TextView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Atypical Angina"
                    android:textAlignment="center"></TextView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Non-Anginal Pain"
                    android:textAlignment="center"></TextView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Typical Angina"
                    android:textAlignment="center"></TextView>

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:text="ChestPainType"
                android:textAlignment="center"
                android:textColor="#8692f7"
                android:textSize="16dp"
                android:textStyle="bold"></TextView>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="#e8e3e3"
            android:orientation="vertical">

            <com.google.android.material.slider.Slider
                android:id="@+id/slider_resting_blood_pressure"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:contentDescription="slider_resting_blood_pressure"
                android:stepSize="1.0"
                android:value="120"
                android:valueFrom="50"
                android:valueTo="300">

            </com.google.android.material.slider.Slider>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:text="RestingBP: resting blood pressure [mm Hg]"
                android:textAlignment="center"
                android:textColor="#8692f7"
                android:textSize="16dp"
                android:textStyle="bold"></TextView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="#e8e3e3"
            android:orientation="vertical">

            <com.google.android.material.slider.Slider
                android:id="@+id/slider_cholesterol"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:contentDescription="Cholesterol: serum cholesterol [mm/dl]"
                android:stepSize="1.0"
                android:value="120"
                android:valueFrom="0"
                android:valueTo="400">

            </com.google.android.material.slider.Slider>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:text="Cholesterol: serum cholesterol [mm/dl]"
                android:textAlignment="center"
                android:textColor="#8692f7"
                android:textSize="16dp"
                android:textStyle="bold">

            </TextView>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="#e8e3e3"
            android:orientation="vertical">
            <RadioGroup

                android:id="@+id/fasting_bs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/fasting_bs_yes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"

                    android:text="Yes"
                    android:textColor="#8692f7" />

                <RadioButton
                    android:id="@+id/fasting_bs_no"
                    android:checked="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="No"
                    android:textColor="#8692f7" />

            </RadioGroup>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:text="Fasting Blood Suger > 120 mg/dl"
                android:textAlignment="center"
                android:textColor="#8692f7"
                android:textSize="16dp"
                android:textStyle="bold"></TextView>

        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="#e8e3e3"
            android:orientation="vertical">

            <com.google.android.material.slider.Slider
                android:id="@+id/slider_RestingECG"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:contentDescription="RestingECG"
                android:stepSize="1.0"
                android:value="1"
                android:valueFrom="0"
                android:valueTo="2"></com.google.android.material.slider.Slider>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="LVH-Left ventricular hypertrophy"
                    android:textAlignment="center"></TextView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Normal"
                    android:textAlignment="center"></TextView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="ST-T wave abnormality"
                    android:textAlignment="center"></TextView>

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:text="RestingECG"
                android:textAlignment="center"
                android:textColor="#8692f7"
                android:textSize="16dp"
                android:textStyle="bold"></TextView>

        </LinearLayout>




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="#e8e3e3"
            android:orientation="vertical">

            <com.google.android.material.slider.Slider

                android:id="@+id/slider_mhr"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:contentDescription="Maximum Heart Rate"
                android:stepSize="1.0"
                android:value="130"
                android:valueFrom="50"
                android:valueTo="300">

            </com.google.android.material.slider.Slider>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:text="Maximum Heart Rate"
                android:textAlignment="center"
                android:textColor="#8692f7"
                android:textSize="16dp"
                android:textStyle="bold"></TextView>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="#e8e3e3"
            android:orientation="vertical">

            <RadioGroup

                android:id="@+id/exercise_angina"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/exercise_angina_no"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:checked="true"
                    android:text="No"
                    android:textColor="#8692f7" />

                <RadioButton
                    android:id="@+id/exercise_angina_yes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Yes"
                    android:textColor="#8692f7" />

            </RadioGroup>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:text="Exercise-Induced Angina"
                android:textAlignment="center"
                android:textColor="#8692f7"
                android:textSize="16dp"
                android:textStyle="bold"></TextView>

        </LinearLayout>


        <Button

            android:id="@+id/predict"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="Predict"></Button>

        <TextView
            android:id="@+id/result"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10px"
            android:text=""
            android:textAlignment="center"
            android:textSize="30dp"></TextView>

    </LinearLayout>
</ScrollView>